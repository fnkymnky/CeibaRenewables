{
  "apiVersion": 3,
  "name": "ceiba/testimonial-carousel",
  "title": "Testimonial Carousel",
  "category": "ceiba-blocks",
  "icon": "format-quote",
  "description": "Manual selection of Testimonials displayed as a 3-up carousel (activates when more than 3 items).",
  "supports": {
    "anchor": true,
    "align": [
      "wide",
      "full"
    ],
    "spacing": {
      "padding": true,
      "margin": true
    }
  },
  "attributes": {
    "includeIds": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "default": []
    }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "script": "file:./view.js",
  "viewStyle": "file:./view.css",
  "render": "file:./render.php"
}