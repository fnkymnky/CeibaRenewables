{
  "apiVersion": 3,
  "name": "ceiba/content-grid-item",
  "title": "Content Grid Item",
  "parent": [ "ceiba/content-grid" ],
  "category": "layout",
  "icon": "index-card",
  "description": "Card item used inside Content Grid.",
  "supports": { "html": false, "reusable": false },
  "attributes": {
    "mediaID": { "type": "number" },
    "mediaURL": {
      "type": "string",
      "source": "attribute",
      "selector": "img.ceiba-content-grid__image",
      "attribute": "data-full"
    },
    "mediaThumbURL": { "type": "string" },
    "mediaMediumURL": { "type": "string" },
    "alt": {
      "type": "string",
      "source": "attribute",
      "selector": "img.ceiba-content-grid__image",
      "attribute": "alt",
      "default": ""
    },
    "title": { "type": "string", "source": "html", "selector": ".ceiba-content-grid__title" },
    "text":  { "type": "string", "source": "html", "selector": ".ceiba-content-grid__text" }
  },
  "usesContext": [ "ceiba/content-grid:columns", "ceiba/content-grid:gap" ],
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css",
  "editorScript": "file:./index.js"
}
