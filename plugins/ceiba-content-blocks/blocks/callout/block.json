{
  "apiVersion": 3,
  "name": "ceiba/callout",
  "title": "Callout",
  "category": "widgets",
  "icon": "megaphone",
  "description": "Highlight content with image and CTAs.",
  "supports": {
    "anchor": true,
    "align": ["wide", "full"],
    "spacing": { "padding": true, "margin": true }
  },
  "attributes": {
    "title": { "type": "string", "default": "" },
    "content": { "type": "string", "default": "" },

    "imageId": { "type": "number", "default": 0 },
    "imageUrl": { "type": "string", "default": "" },
    "imageAlt": { "type": "string", "default": "" },
    "focalPoint": { "type": "object", "default": { "x": 0.5, "y": 0.5 } },

    "enablePrimary": { "type": "boolean", "default": false },
    "primaryLabel": { "type": "string", "default": "" },
    "primaryLink": { "type": "object", "default": { "url": "", "id": 0, "kind": "", "type": "", "opensInNewTab": false } },

    "enableSecondary": { "type": "boolean", "default": false },
    "secondaryLabel": { "type": "string", "default": "" },
    "secondaryLink": { "type": "object", "default": { "url": "", "id": 0, "kind": "", "type": "", "opensInNewTab": false } },

    "colorScheme": { "type": "string", "default": "green" }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css"
}
