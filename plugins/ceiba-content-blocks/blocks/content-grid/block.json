{
  "apiVersion": 3,
  "name": "ceiba/content-grid",
  "title": "Content Grid Section",
  "category": "ceiba-blocks",
  "icon": "screenoptions",
  "description": "Displays a grid of pages, with the featured image and page title.",
  "supports": {
    "html": false,
    "align": ["wide", "full"],
    "spacing": { "blockGap": true }
  },
  "attributes": {
    "columns": { "type": "number", "default": 3 },
    "gap": { "type": "string", "default": "1.25rem" }
  },
  "providesContext": {
    "content-grid:columns": "columns",
    "content-grid:gap": "gap"
  },
  "style": "file:./style-index.css",
  "editorStyle": "file:./index.css",
  "editorScript": "file:./index.js"
}
