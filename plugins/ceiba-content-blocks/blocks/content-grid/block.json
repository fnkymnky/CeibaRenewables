{
  "apiVersion": 3,
  "name": "ceiba/content-grid",
  "title": "Content Grid",
  "category": "layout",
  "icon": "screenoptions",
  "description": "Grid container for content-grid-item blocks.",
  "supports": {
    "html": false,
    "align": ["wide", "full"],
    "spacing": { "blockGap": true }
  },
  "attributes": {
    "columns": { "type": "number", "default": 3 },
    "gap": { "type": "string", "default": "1.25rem" }
  },
  "providesContext": {
    "content-grid:columns": "columns",
    "content-grid:gap": "gap"
  },
  "style": "file:./style.css",
  "editorStyle": "ceiba-blocks-editor-style",
  "editorScript": "file:./index.js"
}
