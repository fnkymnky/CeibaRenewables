{
  "apiVersion": 3,
  "name": "ceiba/content-grid",
  "title": "Content Grid",
  "category": "layout",
  "icon": "screenoptions",
  "description": "Grid container for content-grid-item blocks.",
  "supports": {
    "html": false,
    "align": ["wide", "full"],
    "spacing": { "blockGap": true }
  },
  "attributes": {
    "columns": {
      "type": "number",
      "default": 3
    },
    "gap": {
      "type": "string",
      "default": "1.25rem"
    }
  },
  "providesContext": {
    "ceiba/content-grid:columns": "columns",
    "ceiba/content-grid:gap": "gap"
  },
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css",
  "editorScript": "file:./index.js",
  "script": "file:./frontend.js"
}
