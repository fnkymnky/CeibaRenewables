  "attributes": {
    "includeIds": { "type": "array", "items": { "type": "number" }, "default": [] }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "script": "file:./view.js",
  "viewStyle": "file:./view.css",
  "render": "file:./render.php"
}
